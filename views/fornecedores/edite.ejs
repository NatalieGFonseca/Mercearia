<%- include ('../assets/head') %>

<title>Edição de fornecedor</title>
<%- include('../assets/menu') %> 
<body>
    
    <div class="container-fluid">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card mb-9">
                        <div class="row g-0">
                            <div class="col-lg-6" style="text-align: center;">
                                <img src="/imagens/welcome.svg" class="img-fluid rounded-start" style="text-align: center; margin-top: 10px;" alt="imagem de login usuário" width="450" height="450">
                            </div>
                            <div class="col-lg-6">
                                <div class="card-body">
                                    <h3 style="text-align: center;">Edite</h3>
                                    <form method="POST" action="/fornecedores/<%=fornecedor.id%>?_method=PATCH">
                                        <div class="mb-3">
                                            <label for="nome" class="form-label">Nome</label>
                                            <textarea name="nome" cols='50' rows='1'><%= fornecedor.nome%></textarea> 
                                        </div>
                                        <div class="mb-3">
                                            <label for="tipo" class="form-label">Tipo</label>
                                            <textarea name="tipo" cols='50' rows='1'><%= fornecedor.tipo%></textarea> 
                                        </div>
                                        <div class="mb-3">
                                            <label for="email" class="form-label">Email</label>
                                            <textarea name="email" cols='50' rows='1'><%= fornecedor.email%></textarea>
                                        </div>
                                        <div class="mb-3">
                                            <label for="telefone" class="form-label">Tipo</label>
                                            <textarea name="telefone" cols='50' rows='1'><%= fornecedor.telefone%></textarea>
                                        </div>
                                        
                                        <div>
                                            <button type="submit" class="btn btn-outline-success" style="float: right; margin-bottom: 10px;">Salvar</button>
                                        </div>
                                </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

<script src="/js/scripts.js"></script>