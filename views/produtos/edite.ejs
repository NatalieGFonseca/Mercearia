<%- include ('../assets/head') %>

<title>Edição</title>
<%- include('../assets/menu') %> 
<body>
    
    <div class="container-fluid">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card mb-9">
                        <div class="row g-0">
                            <div class="col-lg-6" style="text-align: center;">
                                <img src="/imagens/welcome.svg" class="img-fluid rounded-start" style="text-align: center; margin-top: 10px;" alt="imagem de login usuário" width="450" height="450">
                            </div>
                            <div class="col-lg-6">
                                <div class="card-body">
                                    <h3 style="text-align: center;">Edite</h3>
                                    <form method="POST" action="/produtos/<%=produto.id%>?_method=PATCH">
                                        <div class="mb-3">
                                            <label for="nome" class="form-label">Nome</label>
                                            <input type="text" class="form-control" id="nome" name="nome"><%= produto.nome %> 
                                        </div>
                                        <div class="mb-3">
                                            <label for="tipo" class="form-label">Tipo</label>
                                            <input type="text" class="form-control" id="tipo" name="tipo"><%= produto.tipo %> 
                                        </div>
                                        <div class="mb-3">
                                            <label for="preco" class="form-label">Preço</label>
                                            <input type="number" class="form-control" id="preco" name="preco"><%= produto.preco %> 
                                        </div>
                                        
                                        <div>
                                            <button type="submit" class="btn btn-outline-success" style="float: right; margin-bottom: 10px;">Salvar</button>
                                        </div>
                                </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

<script src="/js/scripts.js"></script>