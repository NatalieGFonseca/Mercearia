<%- include ('../assets/head') %>
    <title>Visualização do estoque</title>

    <body>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">
                    <h3>Mercearia</h3>
                </a>
                    <form class="d-flex" action="/funcionarios/home" method="GET" style="margin-right: 5px;">
                        <button class="btn btn-outline-success" type="submit">Voltar<i class="fas fa-arrow-left"
                                style="padding-left: 5px; text-align: center;"></i></button>
                    </form>
                    <form class="d-flex" action="/usuarios/logoff" method="GET" style="margin-right: 5px;">
                        <button class="btn btn-outline-success" type="submit">Sair<i class="fas fa-sign-out-alt"
                                style="padding-left: 5px; text-align: center;"></i></button>
                    </form>
                </div>
            </div>
        </nav>

        <div class="container-fluid">
            <div class="container">
                <div class="row">
                    <% for( let v of vendas ) { %>
                        <div class="col-lg-6">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">Venda <%= v.id %> </h5>
                                    <p>Valor: <%= v.valor %></p>
                                    <p>Data: <%= v.data %></p>
                                </div>
                            </div>
                        </div>
                        <% } %>
                </div>
            </div>
        </div>

    </body>
