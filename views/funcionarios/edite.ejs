<%- include ('../assets/head') %>

<title>Edição de funcionario</title>
<%- include('../assets/menu') %> 
<body>
    
    <div class="container-fluid">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card mb-9">
                        <div class="row g-0">
                            <div class="col-lg-6" style="text-align: center;">
                                <img src="/imagens/welcome.svg" class="img-fluid rounded-start" style="text-align: center; margin-top: 10px;" alt="imagem de login usuário" width="450" height="450">
                            </div>
                            <div class="col-lg-6">
                                <div class="card-body">
                                    <h3 style="text-align: center;">Edite</h3>
                                    <form method="POST" action="/funcionarios/<%=funcionario.id%>?_method=PATCH">
                                        <div class="mb-3">
                                            <label for="nome" class="form-label">Nome</label>
                                            <textarea name="nome" cols='50' rows='1'><%= funcionario.nome%></textarea> 
                                        </div>
                                        <div class="mb-3">
                                            <label for="cpf" class="form-label">CPF</label>
                                            <textarea name="cpf" cols='50' rows='1'><%= funcionario.cpf%></textarea> 
                                        </div>
                                        <div class="mb-3">
                                            <label for="funcao" class="form-label">Função</label>
                                            <textarea name="funcao" cols='50' rows='1'><%= funcionario.funcao%></textarea> 
                                        </div>
                                        <div class="mb-3">
                                            <label for="telefone" class="form-label">Telefone</label>
                                            <textarea name="telefone" cols='50' rows='1'><%= funcionario.telefone%></textarea>
                                        </div>
                                        <div class="mb-3">
                                            <label for="data_nascimento" class="form-label">Data de nascimento</label>
                                            <textarea name="data_nascimento" cols='50' rows='1'><%= funcionario.data_nascimento%></textarea>
                                        </div>
                                        <div class="mb-3">
                                            <label for="rua" class="form-label">Rua</label>
                                            <textarea name="rua" cols='50' rows='1'><%= funcionario.rua%></textarea>
                                        </div>
                                        <div class="mb-3">
                                            <label for="bairro" class="form-label">funcao</label>
                                            <textarea name="bairro" cols='50' rows='1'><%= funcionario.bairro%></textarea>
                                        </div>
                                        <div>
                                            <button type="submit" class="btn btn-outline-success" style="float: right; margin-bottom: 10px;">Salvar</button>
                                        </div>
                                </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

<script src="/js/scripts.js"></script>